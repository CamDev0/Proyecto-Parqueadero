@page "/users"
@inject NavigationManager navigationManager
@inject SweetAlertService swal
@inject IRepository repository

<h3>Usuarios</h3>


<div class="mb-3">
    <a class="btn btn-primary" href="/users/create">Nuevo Usuario</a>
</div>
<br />
<Pagination CurrentPage="currentPage"
            TotalPages="totalPages"
            SelectedPage="SelectedPage" />

<GenericList MyList="Users">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width:300px">Usuario</th>
                    <th style="width:300px">ID Usuario</th>
                    <th style="width:210px">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Users!)
                {
                    <tr>
                        <td>
                            @user.Name
                        </td>
                        <td>
                            @user.IDUser
                        </td>
                        <td>
                            <a href="/users/edit/@user.Id" class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(user))>Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<User>? Users { get; set; }
    private int currentPage = 1;
    private int totalPages;


    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task SelectedPage(int page)
    {
        currentPage = page;
        await Load(page);
    }


    private async Task Load(int page = 1)
    {
        string url1 = $"api/users?page={page}";
        string url2 = $"api/users/totalPages";

        var responseHppt = await repository.Get<List<User>>(url1);
        var responseHppt2 = await repository.Get<int>(url2);
        Users = responseHppt.Response!;
        totalPages = responseHppt2.Response!;

    }

    private async Task Delete(User user)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/users/{user.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessageAsync();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }


}

